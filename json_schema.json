{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FraudSimulationSequence",
  "type": "object",
  "properties": {
    "sequence": {
      "type": "array",
      "description": "Ordered list of events (actions or transactions) within a simulated fraud episode.",
      "items": {
        "type": "string",
        "pattern": "^(action\\([^,]+, [^,]+, [^,]+, [^,]+, [^\\)]+\\)|transaction\\([^,]+, [^,]+, [^,]+, [0-9]+(\\.[0-9]{2})?\\))$"
      },
      "minItems": 1
    }
  },
  "required": ["sequence"],
  "additionalProperties": false
}